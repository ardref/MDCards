#:kivy 1.10.0


<MyButton@MDRaisedButton>:
    size_hint: [0.3, 0.5]
    halign: "left"
    valign: "top"

BoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "Events"

    MDLabel:
        text: "Order"
        halign: "center"
        font_style: "H2"
        theme_text_color: "Secondary"

    MDLabel:
        text: "Enemy Spotted!"
        halign: "center"
        font_style: "H3"
        theme_text_color: "Primary"

    MDLabel:
        text: "Advance towards nearest opponent(s)"
        halign: "center"
        font_style: "H4"
        theme_text_color: "Primary"


    MDLabel:
        text: "Subordinate CR required to cancel order"
        halign: "center"
        font_style: "H5"
        theme_text_color: "Primary"

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        adaptive_size: True

        MyButton:
            text: 'Next'
