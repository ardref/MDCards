#:kivy 1.10.0


MDScreen:

    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Events"

        MDLabel:
            text: "Order"
            halign: "center"
            font_style: "H2"
            theme_text_color: "Secondary"

        MDLabel:
            text: "Enemy Spotted!"
            halign: "center"
            font_style: "H3"
            theme_text_color: "Primary"

        MDLabel:
            text: "Advance towards nearest opponent(s)"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Primary"


        MDLabel:
            text: "Subordinate CR required to cancel order"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Primary"

        MDRaisedButton:
            text: "Next"
            rounded_button: "True"
            theme_text_color: "Hint"
