#:kivy 1.10.0


<NextCardButton@MDRaisedButton>:
    size_hint: [0.3, 0.5]
    halign: "left"
    valign: "top"

<EventCardLayout@BoxLayout>:
    orientation: "vertical"

EventCardLayout:

    MDToolbar:
        title: "Events"
        right_action_items: [["menu", lambda x: app.callback(x)]]
        elevation: 10

    MDLabel:
        text: "Order"
        halign: "center"
        font_style: "H2"
        theme_text_color: "Secondary"

    MDLabel:
        text: "Enemy Spotted!"
        halign: "center"
        font_style: "H3"
        theme_text_color: "Primary"

    MDLabel:
        text: "Advance towards nearest opponent(s)"
        halign: "center"
        font_style: "H4"
        theme_text_color: "Primary"

    MDLabel:
        text: "Subordinate CR required to cancel order"
        halign: "center"
        font_style: "H5"
        theme_text_color: "Primary"

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        adaptive_size: True

        NextCardButton:
        # To Do: move button to right.
            text: 'Next'
