#:kivy 1.10.0


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            filters: ['*.csv']

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<NextCardButton@MDRaisedButton>:
    size_hint: [.2, .2]
    # size: [100, 100]


<CardScreen>:

    toolbar: toolbar
    title: title
    body: body
    extra: extra

    BoxLayout:
        orientation: "vertical"
#        size: root.width, root.height
        id: event_card


        MDToolbar:
            id: toolbar
            title: "Toolbar"
            elevation: 10
            right_action_items: [['import', lambda x: root.load_dialog()]]

        MDLabel
            id: title
            text: "Title"
            halign: "center"
            font_style: "H2"
            theme_text_color: "Primary"

        MDLabel:
            id: body
            text: "Body"
            halign: "center"
            font_style: "H4"
            theme_text_color: "Primary"

        MDLabel:
            id: extra
            text: "Extra"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Primary"

#        EventBottomLayout:
    MDBottomAppBar:

        MDToolbar:
            title: "Title"
            icon: "arrow-right-circle"
            type: "bottom"
            left_action_items: [["menu", lambda x: x]]
            mode: "end"
            on_action_button: app.forward()
